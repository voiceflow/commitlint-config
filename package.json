{
  "name": "@voiceflow/commitlint-config",
  "description": "Commitlint config",
  "version": "1.0.1",
  "author": "Voiceflow",
  "bugs": {
    "url": "https://github.com/storyflow/commitlint-config/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^7.5.0",
    "@voiceflow/commitlint-config": "^1.0.1",
    "@voiceflow/eslint-config": "^2.0.4",
    "@voiceflow/git-branch-check": "^1.1.3",
    "@voiceflow/prettier-config": "^1.0.5",
    "commitizen": "^3.1.1",
    "commitlint": "^7.5.2",
    "cz-conventional-changelog": "^2.1.0",
    "eslint": "^6.7.2",
    "eslint-plugin-mocha": "^6.2.2",
    "eslint-plugin-simple-import-sort": "^5.0.0",
    "fixpack": "^2.3.1",
    "husky": "^2.2.0",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1",
    "prettier-eslint-cli": "^5.0.0"
  },
  "files": [
    "index.js"
  ],
  "homepage": "https://github.com/storyflow/commitlint-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "git-branch-check"
    }
  },
  "keywords": [
    "commitlint"
  ],
  "license": "MIT",
  "lint-staged": {
    "**/*.{js,ts}": [
      "eslint --fix",
      "prettier-eslint --write",
      "git add"
    ],
    "package.json": [
      "fixpack",
      "git add"
    ]
  },
  "main": "index.js",
  "peerDependencies": {
    "prettier": "^1.17.1"
  },
  "prettier": "@voiceflow/prettier-config",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/storyflow/commitlint-config"
  },
  "scripts": {
    "commit": "git-cz",
    "lint": "eslint \"./**/*.{js,ts}\"",
    "lint:fix": "yarn lint --fix",
    "lint:quiet": "yarn lint --quiet",
    "lint:report": "yarn lint --format json -o sonar/report.json",
    "prepare": "fixpack",
    "test": "echo \"Error: no test specified\" && exit 1"
  }
}
